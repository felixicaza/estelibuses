{
  "name": "estelibuses",
  "version": "0.0.0",
  "private": true,
  "description": "La primer plataforma para conocer los horarios de las terminales de buses del municipio de Estel√≠ - Nicaragua.",
  "license": "GPL-3.0",
  "author": {
    "name": "Felix Icaza",
    "email": "contacto@felixicaza.com",
    "url": "https://felixicaza.com/"
  },
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build && pnpm compress",
    "compress": "node imagemin.js && pnpm minify-json dist/manifest.json",
    "dev": "astro dev",
    "lint": "eslint --cache ./",
    "lint:fix": "eslint --cache --fix ./",
    "prepare": "simple-git-hooks",
    "preview": "astro preview"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "nano-staged": {
    "*": "pnpm lint:fix"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@foobar404/wave": "2.0.4",
    "@playform/compress": "0.1.9",
    "@playform/inline": "0.1.2",
    "@tailwindcss/vite": "4.1.4",
    "astro": "5.7.8",
    "astro-compressor": "1.0.0",
    "astro-imagetools": "0.9.0",
    "astro-seo-schema": "5.0.0",
    "firebase": "10.6.0",
    "lightningcss": "1.29.3",
    "schema-dts": "1.1.5",
    "tailwindcss": "4.1.4",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.1",
    "@commitlint/config-conventional": "18.4.0",
    "astro-sitemap": "1.0.0",
    "eslint": "9.26.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsonc": "2.20.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-package-json": "0.31.0",
    "eslint-plugin-readable-tailwind": "2.1.1",
    "eslint-plugin-yml": "1.18.0",
    "globals": "16.0.0",
    "imagemin": "8.0.1",
    "imagemin-mozjpeg": "10.0.0",
    "imagemin-pngquant": "9.0.2",
    "jiti": "2.4.2",
    "minify-json": "1.0.0",
    "nano-staged": "0.8.0",
    "neostandard": "0.12.1",
    "simple-git-hooks": "2.13.0"
  }
}
