{
  "name": "estelibuses",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0",
  "author": {
    "name": "Felix Icaza",
    "email": "contacto@felixicaza.com",
    "url": "https://felixicaza.com/"
  },
  "type": "module",
  "scripts": {
    "build": "astro build && pnpm compress",
    "compress": "node imagemin.js && pnpm minify-json dist/manifest.json",
    "dev": "astro dev",
    "prepare": "simple-git-hooks",
    "preview": "astro preview"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "nano-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --cache --fix --ext .js,.mjs,.cjs ./",
      "prettier --write ./**/*.{js,mjs,cjs}"
    ],
    "*.astro": [
      "eslint --cache --ext .astro ./src/ --fix",
      "prettier --write ./src/**/*.astro --plugin-search-dir=."
    ],
    "*.{jsx,tsx}": [
      "eslint --cache --ext .jsx,.tsx ./src/ --fix",
      "prettier --write ./src/**/*.{jsx,tsx} --plugin-search-dir=."
    ],
    "*.css": "prettier --write ./src/styles/*.css",
    "*.json": "prettier --write ./**/*.json",
    "*.md": "prettier --write ./**/*.md",
    "*.{yaml,yml}": "prettier --write ./**/*.{yaml,yml}"
  },
  "dependencies": {
    "@foobar404/wave": "2.0.4",
    "@playform/compress": "0.1.9",
    "@playform/inline": "0.1.2",
    "@tailwindcss/vite": "4.1.4",
    "astro": "5.7.8",
    "astro-compressor": "1.0.0",
    "astro-imagetools": "0.9.0",
    "astro-seo-schema": "5.0.0",
    "firebase": "10.6.0",
    "lightningcss": "1.29.3",
    "tailwindcss": "4.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.1",
    "@commitlint/config-conventional": "18.4.0",
    "astro-eslint-parser": "0.16.0",
    "astro-sitemap": "1.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-astro": "0.29.1",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-promise": "6.0.0",
    "imagemin": "8.0.1",
    "imagemin-mozjpeg": "10.0.0",
    "imagemin-pngquant": "9.0.2",
    "minify-json": "1.0.0",
    "nano-staged": "0.8.0",
    "prettier": "3.0.3",
    "prettier-plugin-astro": "0.12.1",
    "prettier-plugin-tailwindcss": "0.5.7",
    "simple-git-hooks": "2.13.0",
    "typescript": "5.2.2"
  }
}
