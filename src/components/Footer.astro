---
import { Picture } from 'astro-imagetools/components'
---

<footer class="bg-[#1c1611] text-center text-white">
  <div class="container mx-auto px-4 pt-12 pb-8">
    <section
      class="flex flex-col gap-y-8 xl:flex-row xl:items-center xl:justify-between xl:gap-y-0"
    >
      <section class="flex flex-col items-center gap-y-4">
        <a href="/" class="inline-block">
          <Picture
            src="/src/img/estelibuses-logo.png"
            alt="Estelí Buses: Horarios de las Terminales de Buses de Estelí"
            attributes={{
              img: {
                fetchpriority: 'low'
              }
            }}
            loading="lazy"
            width={160}
            height={70}
          />
        </a>
        <div class="flex flex-col items-center gap-y-2">
          <p class="text-sm font-bold">¡Síguenos en Facebook!</p>
          <a
            class="transition-colors active:text-orange-400 any-hover:text-orange-400"
            href="https://www.facebook.com/estelibuses"
            target="_blank"
            aria-label="¡Sigue la página de Estelí Buses en Facebook!"
            title="¡Sigue la página de Estelí Buses en Facebook!"
          >
            <svg
              class="fill-current"
              viewBox="0 0 24 24"
              width="28"
              height="28"
            >
              <path
                d="M12 2.04a10.03 10.03 0 0 0-1.56 19.92v-7H7.9v-2.9h2.54V9.85c0-2.51 1.49-3.89 3.78-3.89 1.09 0 2.23.19 2.23.19v2.47h-1.26c-1.24 0-1.63.77-1.63 1.56v1.88h2.78l-.45 2.9h-2.33v7a10 10 0 0 0 8.44-9.9c0-5.53-4.5-10.02-10-10.02Z"
              ></path>
            </svg>
          </a>
        </div>
      </section>
      <section
        class="flex flex-col items-center gap-y-8 xl:items-end xl:gap-y-4"
      >
        <nav>
          <ul
            class="flex flex-wrap items-center justify-center gap-x-6 gap-y-4 text-sm"
          >
            <li>
              <a
                href="/terminal-norte-esteli"
                class="transition-colors active:text-orange-400 any-hover:text-orange-400"
                >Horarios Terminal Norte</a
              >
            </li>
            <li>
              <a
                href="/terminal-sur-esteli"
                class="transition-colors active:text-orange-400 any-hover:text-orange-400"
                >Horarios Terminal Sur</a
              >
            </li>
            <li>
              <a
                href="/acerca-de-estelibuses"
                class="transition-colors active:text-orange-400 any-hover:text-orange-400"
                >Acerca</a
              >
            </li>
            <li>
              <a
                href="/guia-de-instalacion"
                class="transition-colors active:text-orange-400 any-hover:text-orange-400"
                >Guía de Instalación</a
              >
            </li>
            <li>
              <a
                href="/politica-de-privacidad"
                class="transition-colors active:text-orange-400 any-hover:text-orange-400"
                >Política de Privacidad</a
              >
            </li>
          </ul>
        </nav>
        <a
          href="https://github.com/Felix-Icaza/estelibuses"
          target="_blank"
          class="inline-block"
        >
          <Picture
            src="/src/img/github-badge.png"
            alt="Visita el proyecto de Estelí Buses en GitHub"
            attributes={{
              img: {
                fetchpriority: 'low'
              }
            }}
            loading="lazy"
            width={185}
          />
        </a>
      </section>
    </section>

    <hr class="my-8 h-px border-none bg-[#483323]" />

    <section
      class="flex flex-col items-center gap-y-8 xl:flex-row xl:items-start xl:justify-between"
    >
      <div
        class="order-2 flex flex-col items-center gap-y-4 xl:order-1 xl:items-start xl:gap-y-0"
      >
        <p class="text-sm">
          &copy; <span id="currentyear"></span>
          <a
            href="/"
            class="text-inherit no-underline active:underline any-hover:underline"
            >Estelí Buses</a
          >. Hecho con ❤ en Estelí para todos los Estelianos.
        </p>
        <section class="flex items-center gap-x-2">
          <p class="text-sm">Desarrollado por</p>
          <a
            href="https://felixicaza.com/?utm_source=estelibuses&utm_medium=website&utm_campaign=estelibuses_users&utm_content=footer"
            target="_blank"
          >
            <img
              src="/img/logo.svg"
              alt="Félix Icaza - Desarrollador Web en Nicaragua"
              decoding="async"
              fetchpriority="low"
              loading="lazy"
              width="100"
              height="37"
              style="aspect-ratio: 100/37"
            />
          </a>
        </section>
      </div>
      <section class="order-1 flex flex-col items-center gap-y-2 xl:order-2">
        <p class="text-sm font-bold">¡Comparte Estelí Buses!</p>
        <nav class="flex items-center gap-x-8">
          <a
            class="transition-colors active:text-orange-400 any-hover:text-orange-400"
            id="whatsapp"
            href="https://api.whatsapp.com/send?text=%C2%A1Conoce%20todos%20los%20horarios%20de%20las%20terminales%20de%20buses%20de%20la%20ciudad%20de%20Estel%C3%AD!%0ahttps://estelibuses.web.app/?utm_source=whatsapp&utm_medium=webapp&utm_campaign=social_share&utm_content=footer"
            target="_blank"
            aria-label="¡Comparte Estelí Buses a tus contactos en WhatsApp!"
            title="¡Comparte Estelí Buses a tus contactos en WhatsApp!"
          >
            <svg
              class="fill-current"
              viewBox="0 0 24 24"
              width="26"
              height="26"
            >
              <path
                d="M12 2a10 10 0 0 0-8.6 14.9L2 22l5.3-1.4A10 10 0 1 0 12 2m0 1.7A8.2 8.2 0 1 1 7.9 19l-.2-.2-3.2.8.9-3-.2-.3a8.3 8.3 0 0 1 7-12.6M8.5 7.3a1 1 0 0 0-.6.3c-.3.3-.9.9-.9 2.1 0 1.2.9 2.4 1 2.6.1.1 1.8 2.6 4.3 3.7.5.3 1 .4 1.4.5.6.2 1 .2 1.5.1.5 0 1.5-.6 1.7-1.2.2-.5.2-1 .1-1.1l-.4-.3-1.7-.8c-.3-.1-.4-.1-.6.1l-.8 1c-.1.1-.3.2-.5 0-.3 0-1-.4-2-1.2a7.6 7.6 0 0 1-1.4-1.7c-.1-.3 0-.4.1-.5l.4-.5.3-.4v-.4l-.8-1.8c-.2-.5-.4-.5-.6-.5h-.5Z"
              ></path>
            </svg>
          </a>
          <a
            class="transition-colors active:text-orange-400 any-hover:text-orange-400"
            id="facebook"
            href="https://www.facebook.com/sharer/sharer.php?u=https://estelibuses.web.app/?utm_source=facebook&utm_medium=webapp&utm_campaign=social_share&utm_content=footer"
            target="_blank"
            aria-label="¡Comparte Estelí Buses a tus amigos en Facebook!"
            title="¡Comparte Estelí Buses a tus amigos en Facebook!"
          >
            <svg
              class="fill-current"
              viewBox="0 0 24 24"
              width="28"
              height="28"
            >
              <path
                d="M12 2.04a10.03 10.03 0 0 0-1.56 19.92v-7H7.9v-2.9h2.54V9.85c0-2.51 1.49-3.89 3.78-3.89 1.09 0 2.23.19 2.23.19v2.47h-1.26c-1.24 0-1.63.77-1.63 1.56v1.88h2.78l-.45 2.9h-2.33v7a10 10 0 0 0 8.44-9.9c0-5.53-4.5-10.02-10-10.02Z"
              ></path>
            </svg>
          </a>
          <a
            class="transition-colors active:text-orange-400 any-hover:text-orange-400"
            id="twitter"
            href="https://twitter.com/intent/tweet?url=https://estelibuses.web.app/?utm_source=twitter&utm_medium=webapp&utm_campaign=social_share&utm_content=footer&text=%C2%A1Conoce%20todos%20los%20horarios%20de%20las%20terminales%20de%20buses%20de%20la%20ciudad%20de%20Estel%C3%AD!"
            target="_blank"
            aria-label="¡Comparte Estelí Buses a tus contactos en Twitter!"
            title="¡Comparte Estelí Buses a tus contactos en Twitter!"
          >
            <svg
              class="fill-current"
              viewBox="0 0 24 24"
              width="27"
              height="27"
            >
              <path
                d="M22.5 6c-.8.3-1.6.6-2.5.7.9-.5 1.6-1.4 1.9-2.4-.8.5-1.8.9-2.7 1a4.3 4.3 0 0 0-7.3 4C8.2 9 5 7.3 3 4.8a4.2 4.2 0 0 0 1.3 5.7c-.7 0-1.3-.2-2-.5 0 2.1 1.6 3.8 3.5 4.2a4.2 4.2 0 0 1-2 .1c.6 1.7 2.2 3 4 3A8.5 8.5 0 0 1 1.6 19c2 1.2 4.2 1.9 6.6 1.9 7.9 0 12.2-6.5 12.2-12.2v-.6C21.2 7.6 22 7 22.5 6Z"
              ></path>
            </svg>
          </a>
          <a
            class="transition-colors active:text-orange-400 any-hover:text-orange-400"
            id="telegram"
            href="https://telegram.me/share/url?url=%C2%A1Conoce%20todos%20los%20horarios%20de%20las%20terminales%20de%20buses%20de%20la%20ciudad%20de%20Estel%C3%AD!%0ahttps://estelibuses.web.app/?utm_source=telegram&utm_medium=webapp&utm_campaign=social_share&utm_content=footer"
            target="_blank"
            aria-label="¡Comparte Estelí Buses a tus contactos en Telegram!"
            title="¡Comparte Estelí Buses a tus contactos en Telegram!"
          >
            <svg
              class="fill-current"
              viewBox="0 0 24 24"
              width="22"
              height="22"
            >
              <path
                clip-rule="evenodd"
                d="M24 12a12 12 0 1 1-24 0 12 12 0 0 1 24 0ZM12.4 8.9a572 572 0 0 0-7.9 3.6c0 .4.5.5 1 .7l.3.1c.6.2 1.5.5 1.9.5.4 0 .8-.2 1.3-.5a124 124 0 0 1 5.3-3.3v.2c0 .2-1.8 1.8-2.7 2.7l-.5.5-.3.3c-.6.5-1 1 0 1.6a94.2 94.2 0 0 1 2.7 1.8l.4.3c.5.4 1 .7 1.5.6.3 0 .6-.3.8-1.2a142.2 142.2 0 0 0 1.3-9.1l-.1-.3a.8.8 0 0 0-.5-.2c-.4 0-1.1.3-4.5 1.7Z"
                fill-rule="evenodd"></path>
            </svg>
          </a>
          <button
            class="hidden transition-colors active:text-orange-400 any-hover:text-orange-400"
            id="share"
            type="button"
            aria-label="¡Comparte Estelí Buses a tus amigos!"
            title="¡Comparte Estelí Buses a tus amigos!"
          >
            <svg
              class="fill-current"
              viewBox="0 0 24 24"
              width="25"
              height="25"
            >
              <path
                d="M18 16a3 3 0 0 0-2 .9l-7-4.2v-1.4l7-4.1a3 3 0 0 0 2 .8 3 3 0 0 0 3-3 3 3 0 0 0-3-3 3 3 0 0 0-3 3v.7L8 9.8A3 3 0 0 0 6 9a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 2-.8l7.2 4.1-.1.7a3 3 0 0 0 5.8 0 3 3 0 0 0-2.9-3Z"
              ></path>
            </svg>
          </button>
        </nav>
      </section>
    </section>
  </div>
</footer>

<script>
  /**
   * Get current year
   */

  document.getElementById('currentyear').textContent = String(
    new Date().getFullYear()
  )

  /**
   * Sound page on click
   */

  const soundPage = new Audio('/sounds/switch-tap.mp3')

  /**
   * Share button
   */

  const shareBtn = document.getElementById('share')

  const shareData = {
    title: 'Estelí Buses',
    text: '¡Conoce todos los horarios de las terminales de buses de la ciudad de Estelí!',
    url: 'https://estelibuses.web.app/?utm_source=sharebtn&utm_medium=webapp&utm_campaign=social_share&utm_content=footer'
  }

  if (navigator.share) {
    shareBtn.classList.remove('hidden')

    shareBtn.addEventListener('click', () => {
      if (localStorage.getItem('sounds_enabled') === 'true') {
        soundPage.play()
      }

      if (
        'vibrate' in navigator &&
        localStorage.getItem('sounds_enabled') === 'false'
      ) {
        navigator.vibrate(80)
      }

      navigator.share(shareData)
    })
  }
</script>
