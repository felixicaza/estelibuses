        <article
          class="flex flex-col items-center gap-y-20 lg:grid lg:grid-cols-2 lg:gap-16 xl:grid-cols-3"
        >
          {
            northernStationFilter.map(
              (city, index) =>
                index < 6 && (
                  <CardCity
                    cityName={city.name}
                    slug={`/${northernStation.slug}/${city.slug}`}
